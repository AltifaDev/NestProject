<style>
  .final-cta {
    padding: 100px 0;
  }
  .cta-banner-dark {
    background: linear-gradient(
      135deg,
      var(--bg-card) 0%,
      var(--bg-surface) 100%
    );
    border: 1px solid var(--card-border);
    border-radius: 48px;
    padding: 6rem;
    text-align: center;
    box-shadow: 0 40px 100px var(--shadow-color);
  }
  .cta-title {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }
  .cta-desc {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto 3.5rem;
  }
  .btn-lg {
    padding: 1.25rem 3rem;
    font-size: 1.15rem;
    border-radius: 9999px;
  }

  @media (max-width: 768px) {
    .cta-banner-dark {
      padding: 4rem 2rem;
    }
    .cta-title {
      font-size: 2.5rem;
    }
  }
</style>
