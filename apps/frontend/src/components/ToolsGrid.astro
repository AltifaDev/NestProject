---
const tools = [
  { name: "Hospitality", icon: "H", bgColor: "#FF4A00" },
  { name: "Real Estate", icon: "R", bgColor: "#FF7A59" },
  { name: "Retail", icon: "S", bgColor: "#05CE78" },
  { name: "Finance", icon: "F", bgColor: "#0057FF" },
  { name: "Logistics", icon: "L", bgColor: "#FFE01B" },
  { name: "Wellness", icon: "W", bgColor: "#95BF47" },
  { name: "Tech", icon: "T", bgColor: "#000000" },
  { name: "Energy", icon: "E", bgColor: "#F24E1E" },
];

const toolsRow2 = [...tools.slice().reverse()];
---

<section class="tools-section">
  <div class="container">
    <div class="tools-card-container gsap-reveal">
      <div class="tools-header">
        <h2 class="tools-title gradient-text">Sectors We Cover</h2>
        <p class="tools-desc">
          Investing in diverse industries to build a resilient and
          high-performing portfolio.
        </p>
        <div class="tools-btn-wrapper">
          <a href="#" class="btn btn-primary"
            >Explore All Sectors <span class="arrow">â†’</span>
          </a>
        </div>
      </div>

      <div class="marquee-container">
        <!-- Row 1 -->
        <div class="marquee-row">
          <div class="marquee-track">
            {
              [...tools, ...tools].map((tool) => (
                <div class="tool-item">
                  <div
                    class="tool-icon"
                    style={`background-color: ${tool.bgColor}`}
                  >
                    {tool.icon}
                  </div>
                  <span class="tool-name">{tool.name}</span>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Row 2 -->
        <div class="marquee-row reverse">
          <div class="marquee-track">
            {
              [...toolsRow2, ...toolsRow2].map((tool) => (
                <div class="tool-item">
                  <div
                    class="tool-icon"
                    style={`background-color: ${tool.bgColor}`}
                  >
                    {tool.icon}
                  </div>
                  <span class="tool-name">{tool.name}</span>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .tools-section {
    padding: 100px 0;
  }

  .tools-card-container {
    background: var(--bg-surface);
    border: 1px solid var(--card-border);
    border-radius: 48px;
    padding: 6rem 0;
    overflow: hidden;
  }

  .tools-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 5rem;
    padding: 0 2rem;
  }

  .tools-title {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
    line-height: 1.1;
  }
  .tools-desc {
    color: var(--text-secondary);
    font-size: 1.15rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
  }

  .marquee-container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .marquee-row {
    display: flex;
    overflow: hidden;
    user-select: none;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 15%,
      black 85%,
      transparent
    );
  }

  .marquee-track {
    display: flex;
    gap: 1.5rem;
    animation: scroll 40s linear infinite;
    min-width: 100%;
  }

  .reverse .marquee-track {
    animation-direction: reverse;
  }

  .tool-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: var(--bg-glass);
    border: 1px solid var(--border-subtle);
    padding: 0.75rem 1.5rem;
    border-radius: 999px;
    flex-shrink: 0;
  }

  .tool-icon {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 800;
    font-size: 0.85rem;
    color: white;
  }

  .tool-name {
    color: var(--text-primary);
    font-weight: 500;
    font-size: 0.95rem;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (max-width: 768px) {
    .tools-title {
      font-size: 2.5rem;
    }
    .tools-card-container {
      padding: 4rem 0;
      border-radius: 32px;
    }
  }
</style>
