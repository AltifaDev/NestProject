<section id="portfolio" class="split-section visitors">
  <div class="container">
    <div class="split-wrapper">
      <div class="text-content gsap-reveal">
        <h2 class="section-title">Diverse Investment <br /> Portfolio</h2>
        <p class="section-desc">
          A balanced mix of high-yield assets across multiple industries,
          ensuring stability and long-term growth for our partners.
        </p>
        <ul class="bullet-list">
          <li><span class="check">✓</span> Hospitality & Tourism</li>
          <li><span class="check">✓</span> Commercial Real Estate</li>
          <li><span class="check">✓</span> Retail Operations</li>
          <li><span class="check">✓</span> Digital Ventures</li>
        </ul>
      </div>
      <div class="visual-content gsap-reveal">
        <div class="line-chart-box">
          <div class="chart-header">
            <h4>Portfolio Growth</h4>
          </div>
          <div class="chart-svg">
            <svg viewBox="0 0 400 200">
              <path
                d="M0 150 Q 50 130 100 140 T 200 80 T 300 110 T 400 50"
                fill="none"
                stroke="#3B82F6"
                stroke-width="4"></path>
              <path
                d="M0 150 Q 50 130 100 140 T 200 80 T 300 110 T 400 50 V 200 H 0 Z"
                fill="url(#grad1)"
                opacity="0.1"></path>
              <defs>
                <linearGradient id="grad1" x1="0%" y1="0%" x2="0%" y2="100%">
                  <stop offset="0%" style="stop-color:#3B82F6;stop-opacity:1"
                  ></stop>
                  <stop offset="100%" style="stop-color:#3B82F6;stop-opacity:0"
                  ></stop>
                </linearGradient>
              </defs>
            </svg>
          </div>
        </div>
        <div class="small-card-overlay">
          <div class="label">Revenue Growth</div>
          <div class="value">$12.5k</div>
          <div class="trend">+12.5%</div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .split-section {
    padding: 100px 0;
  }
  .split-wrapper {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 6rem;
    align-items: center;
  }
  .section-title {
    font-size: 3.5rem;
    margin-bottom: 2rem;
    color: var(--text-primary);
  }
  .section-desc {
    font-size: 1.15rem;
    color: var(--text-secondary);
    margin-bottom: 3rem;
    line-height: 1.6;
  }
  .bullet-list {
    list-style: none;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }
  .bullet-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 600;
    font-size: 1.05rem;
  }
  .check {
    color: #facc15;
  }

  .visual-content {
    position: relative;
    background: var(--bg-surface);
    border: 1px solid var(--border-subtle);
    border-radius: 32px;
    padding: 3rem;
  }
  .line-chart-box {
    background: var(--bg-card);
    border: 1px solid var(--card-border);
    border-radius: 20px;
    padding: 2rem;
  }
  .chart-header h4 {
    margin-bottom: 2rem;
    font-size: 1.1rem;
    color: var(--text-secondary);
  }

  .small-card-overlay {
    position: absolute;
    bottom: -30px;
    left: -40px;
    background: var(--bg-card);
    border: 1px solid var(--card-border);
    border-radius: 20px;
    padding: 1.5rem 2rem;
    width: 200px;
    box-shadow: var(--shadow-card);
  }
  .small-card-overlay .label {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }
  .small-card-overlay .value {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
  }
  .small-card-overlay .trend {
    font-size: 0.85rem;
    color: #10b981;
    margin-top: 0.25rem;
  }

  @media (max-width: 991px) {
    .split-wrapper {
      grid-template-columns: 1fr;
      gap: 4rem;
    }
    .small-card-overlay {
      position: static;
      width: 100%;
      margin-top: 2rem;
    }
  }
</style>
