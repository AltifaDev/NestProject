---
import { Image } from "astro:assets";
import logoImage from "../assets/Logo.png";
---

<div class="logo">
  <Image src={logoImage} alt="NEST OF ASSETS Logo" width={32} height={32} />
  <span class="logo-text">NEST OF ASSETS CO, LTD</span>
</div>

<style>
  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
  }
  .logo-text {
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }
</style>
